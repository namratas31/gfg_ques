vector<long long int> countZero(int n, int k, vector<vector<int>>& arr){
      //Code Here
      
      vector<long long> res;
      vector<int> rw(n+1,0);
      vector<int> col(n+1,0);
      int cr=n;
      int cc=n;
      
      
      for(auto ele: arr)
      {
          int r=ele[0];
          int c=ele[1];
          
          if(rw[r]==0)
                cr--;
          if(col[c]==0)
            cc--;
          rw[r]=1;
          col[c]=1;
          
          long long c1=cr,c2=cc;
        
        
          long long z=c1*n-(n-c2)*(c1);
          res.push_back(z);
      }
      
      return res;
  }
