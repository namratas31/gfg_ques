long long required(long long arr[], long long n, long long k) {
        // Your code goes here
        int max=arr[0];
        for(int i=0;i<n;i++)
        {
            if(arr[i]>max)
            {
                max=arr[i];
            }
        }
        if(k>=max)
        {
            return -1;
        }
        else
        {
            return max-k;
        }
    }
