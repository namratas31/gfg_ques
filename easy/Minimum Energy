int minEnergy(int a[], int n)
    {
        // Your code goes here
        int min_val=0,sum=0;
        
        for(int i=0;i<n;i++)
        {
            sum+=a[i];
            
            if(sum<min_val)
            {    min_val=sum;
            }
        }
        
        return abs(min_val)+1;
    }
